{
    "manifest_version": 3,
    "name": "YoutubeTools",
    "version": "0",
    "description": "A tool for youtube",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["https://*.youtube.com/*"],
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*"],
        "js": ["yt_tools.js"]
      }
    ],
    "action": {
      "default_title": "YoutubeTools",
      "default_popup": "popup.html"
    }
}